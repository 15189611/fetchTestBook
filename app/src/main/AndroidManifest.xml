<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.handy.fetchbook">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <uses-permission
        android:name="android.permission.CHANGE_CONFIGURATION"
        tools:ignore="ProtectedPermissions" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/common_AppTheme"
        tools:ignore="UnusedAttribute"
        tools:replace="android:networkSecurityConfig,android:label">

        <activity
            android:name=".activity.SplashActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize|locale"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/main_AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTask"
            android:configChanges="locale|layoutDirection"
            />
        <activity android:name=".activity.HomeDetailActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.RegActivity" />
        <activity android:name=".activity.MemberUpgradeActivity" />
        <activity android:name=".activity.WalletActivity" />
        <activity android:name=".activity.WalletBalanceActivity" />
        <activity android:name=".activity.WalletRewardBalanceActivity" />
        <activity android:name=".activity.QrActivity" />
        <activity android:name=".activity.VideoPlayActivity" />
        <activity android:name=".activity.HelpCenterActivity" />
        <activity android:name=".activity.ChangePwdActivity" />
        <activity android:name=".activity.EditUserInfoActivity" />
        <activity android:name=".activity.H5Activity" />
        <activity android:name=".activity.InfoCenterActivity" />
        <activity android:name=".activity.SocialMediaActivity" />
        <activity android:name=".activity.SystemInfoActivity" />
        <activity android:name=".activity.NoticeActivity" />
        <activity android:name=".activity.UserMessageActivity" />
        <activity android:name=".activity.SearchActivity" />
        <activity android:name=".activity.EXPOActivity" />
        <activity android:name=".activity.EXPODetailActivity" />
        <activity android:name=".activity.ForgetPwdActivity" />
    </application>

</manifest>