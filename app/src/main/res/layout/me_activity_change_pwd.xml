<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

    </data>

    <com.google.android.material.circularreveal.CircularRevealLinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/me_login_head_bg"
            android:orientation="vertical">

            <com.google.android.material.circularreveal.CircularRevealLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/common_back" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />


            </com.google.android.material.circularreveal.CircularRevealLinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="40dp"
                app:srcCompat="@drawable/me_login_icon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/me_修改密码"
                android:textColor="@color/common_color_ffffff"
                android:textSize="22sp" />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.circularreveal.CircularRevealLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/me_当前密码"
                    android:textColor="@color/common_color_282828"
                    android:textSize="16sp" />

                <com.google.android.material.circularreveal.CircularRevealLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/common_input_bg"
                    android:minHeight="40dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/me_pwd_icon" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/aetPwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:background="@color/common_color_00FFFFFF"
                        android:hint="@string/me_reg_pwd_hint"
                        android:textColor="@color/common_color_282828"
                        android:textColorHint="@color/common_color_282828"
                        android:textSize="14sp" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/aivEye"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        app:srcCompat="@drawable/common_eye_y"
                        tools:src="@drawable/common_eye_y" />
                </com.google.android.material.circularreveal.CircularRevealLinearLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/me_新密码"
                    android:textColor="@color/common_color_282828"
                    android:textSize="16sp" />

                <com.google.android.material.circularreveal.CircularRevealLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/common_input_bg"
                    android:minHeight="40dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/me_pwd_icon" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/aetNewPwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:background="@color/common_color_00FFFFFF"
                        android:hint="@string/me_reg_pwd_hint"
                        android:textColor="@color/common_color_282828"
                        android:textColorHint="@color/common_color_282828"
                        android:textSize="14sp" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/aivNewEye"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        app:srcCompat="@drawable/common_eye_y"
                        tools:src="@drawable/common_eye_y" />
                </com.google.android.material.circularreveal.CircularRevealLinearLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/me_确认密码"
                    android:textColor="@color/common_color_282828"
                    android:textSize="16sp" />

                <com.google.android.material.circularreveal.CircularRevealLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/common_input_bg"
                    android:minHeight="40dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/me_pwd_icon" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/aetConfirmPwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:background="@color/common_color_00FFFFFF"
                        android:hint="@string/me_reg_pwd_hint"
                        android:textColor="@color/common_color_282828"
                        android:textColorHint="@color/common_color_282828"
                        android:textSize="14sp" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/aivConfirmEye"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        app:srcCompat="@drawable/common_eye_y"
                        tools:src="@drawable/common_eye_y" />
                </com.google.android.material.circularreveal.CircularRevealLinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/me_reg_code_title"
                    android:textColor="@color/common_color_282828"
                    android:textSize="16sp" />


                <com.google.android.material.circularreveal.CircularRevealLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:minHeight="40dp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/aetCode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/common_input_bg"
                        android:gravity="center_vertical"
                        android:hint="@string/me_reg_code_hint"
                        android:singleLine="true"
                        android:paddingStart="10dp"
                        android:textColor="@color/common_color_282828"
                        android:textColorHint="@color/common_color_282828"
                        android:textSize="14sp"
                        tools:ignore="RtlSymmetry" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/sendCode"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/common_btn_grey"
                        android:gravity="center_vertical"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@string/me_reg_get_code"
                        android:textColor="@color/common_color_ABABAB"
                        android:textSize="14sp" />

                </com.google.android.material.circularreveal.CircularRevealLinearLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btnChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="85dp"
                    android:background="@drawable/common_btn_login_gradient"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/me_保存"
                    android:textColor="@color/common_color_282828"
                    android:textSize="16sp" />

            </com.google.android.material.circularreveal.CircularRevealLinearLayout>
        </androidx.core.widget.NestedScrollView>


    </com.google.android.material.circularreveal.CircularRevealLinearLayout>
</layout>