<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg">

    <include
        android:id="@+id/no_login"
        layout="@layout/layout_no_login"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:visibility="gone"
        bind:ignore="UselessParent"
        bind:visibility="visible">

        <com.google.android.material.circularreveal.CircularRevealRelativeLayout
            android:id="@+id/drawHistoryParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:drawableRight="@drawable/draw_history"
                android:text="@string/home_查看历史记录"
                android:textColor="#282828"
                android:textSize="13dp" />


        </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

        <ImageView
            android:id="@+id/icon_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:src="@drawable/draw_icon_title" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                android:id="@+id/crl_left"
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/draw_btn_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/draw_旅游抽奖"
                    android:textColor="#282828"
                    android:textSize="16dp"
                    android:textStyle="bold" />


            </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

            <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                android:id="@+id/crl_right"
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/draw_white_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/draw_福袋抽奖"
                    android:textColor="#282828"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </com.google.android.material.circularreveal.CircularRevealRelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>


        <RelativeLayout
            android:id="@+id/rl_left"
            android:layout_width="316dp"
            android:layout_height="316dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            bind:visibility="visible">

            <com.handy.fetchbook.view.LuckyMonkeyPanelViewV2
                android:id="@+id/lucky_panel"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btn_action"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_centerInParent="true"
                android:background="@drawable/draw_btn_normal"
                android:textColor="#4d1c01"
                android:textSize="34sp"
                android:visibility="gone"
                bind:visibility="visible" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/aivUpgrade"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/common_no_vip"
                bind:visibility="gone" />

        </RelativeLayout>

        <include
            android:id="@+id/rl_right"
            layout="@layout/draw_view_lucky"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/atvTourismLottery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/draw_bottom_btn_bg"
            android:gravity="center"
            android:text="@string/home_旅游抽奖规则说明"
            android:textColor="#282828"
            android:textSize="14dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/drawMarqueeLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:background="@color/common_color_FBB403"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:src="@drawable/home_announcement" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/drawNotice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:gravity="center|start"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="@color/common_color_ffffff"
            android:textSize="14sp" />
    </LinearLayout>

</FrameLayout>