<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/member_up_item_bk"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/aivImg"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:scaleType="center"
            tools:srcCompat="@drawable/expo_icon"
            android:adjustViewBounds="true"
            app:riv_corner_radius_top_left="5dp"
            app:riv_corner_radius_bottom_left="5dp"
            android:background="@drawable/member_up_item_img_bk"
            />

        <com.google.android.material.circularreveal.CircularRevealLinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="0dp"
            android:layout_height="match_parent"
            android:paddingEnd="0dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_weight="1"
                    tools:text="大夫说的发手术费但是对方但是发多少发放的身份多少的顺丰水电费"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/common_color_FBB403"
                    tools:text="Ctrip 掑程" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/memberUpItemMore"
                    android:layout_width="120dp"
                    android:layout_height="26dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/common_btn_login_gradient"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:text="@string/me_more"
                    android:textColor="@color/common_color_282828"
                    android:textSize="13sp"
                    />
            </LinearLayout>


        </com.google.android.material.circularreveal.CircularRevealLinearLayout>
    </LinearLayout>
</layout>