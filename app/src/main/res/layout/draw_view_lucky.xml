<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="280dp"
    android:layout_height="356dp"
    android:layout_gravity="center"
    android:background="@drawable/draw_lucky_bg1"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/id_lucky_turntable"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingTop="70dp"
        android:src="@drawable/draw_lucky_turntable" />

    <RelativeLayout
        android:id="@+id/rl_start"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/id_start_btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="70dp"
            android:src="@drawable/draw_lucky_go1" />
        <TextView
            android:paddingTop="85dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="@string/common_点击抽奖"
            android:textColor="@color/common_color_ffffff"
            android:textSize="16dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/draw_lucky_bottom_bg">

        <TextView
            android:id="@+id/tvLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/common_至尊会员"
            android:textColor="@color/common_color_ffffff"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>