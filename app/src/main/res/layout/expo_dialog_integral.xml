<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/root"
    android:layout_height="360dp"
    android:layout_gravity="center"
    android:layout_marginStart="52dp"
    android:layout_marginEnd="52dp"
    android:background="@color/common_color_00FFFFFF"
    android:maxHeight="300dp">


    <com.google.android.material.circularreveal.CircularRevealRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_centerInParent="true"
        android:background="@drawable/common_dialog_bg">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/atv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/atv_desc"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="如何获得积分?"
            android:textColor="@color/common_color_242B3D"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatTextView

            android:id="@+id/atv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="分享每日文章后便可完成该任务。"
            android:textColor="@color/common_color_636674"
            android:textSize="15dp" />

    </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        tools:srcCompat="@drawable/expo_integral_icon" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/aiv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        tools:srcCompat="@drawable/common_dialog_close" />


</com.google.android.material.circularreveal.CircularRevealRelativeLayout>