<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:background="@drawable/expo_item_bg"
    android:id="@+id/expoItemViewParent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/aivImg"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        tools:srcCompat="@drawable/expo_icon" />

    <View
        android:layout_width="1dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:background="@color/common_color_FDDB08" />

    <com.google.android.material.circularreveal.CircularRevealLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:singleLine="true"
            tools:text="Ctrip 掑程" />

        <com.google.android.material.circularreveal.CircularRevealLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                tools:text="4.2" />

            <per.wsj.library.AndRatingBar
                android:id="@+id/arbRating"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:clickable="false"
                android:isIndicator="true"
                app:bgColor="@color/common_color_ABABAB"
                app:starColor="@color/common_color_FBB403" />

        </com.google.android.material.circularreveal.CircularRevealLinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/common_btn_login_gradient"
            android:gravity="center"
            android:text="@string/expo_details"
            android:textColor="@color/common_color_282828"
            android:textSize="14sp" />
    </com.google.android.material.circularreveal.CircularRevealLinearLayout>

</com.google.android.material.circularreveal.CircularRevealLinearLayout>