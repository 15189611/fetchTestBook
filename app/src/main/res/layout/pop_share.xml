<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    android:gravity="center"
    android:orientation="vertical">

    <com.google.android.material.circularreveal.CircularRevealRelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_gravity="center"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="52dp"
        android:background="@color/common_color_00FFFFFF"
        android:maxHeight="300dp">


        <com.google.android.material.circularreveal.CircularRevealRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:layout_centerInParent="true"
            android:background="@drawable/common_dialog_bg">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/task_想分享这篇文章"
                android:textColor="@color/common_color_242B3D"
                android:textSize="20dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/atv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/atv_title"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                tools:text="@string/task_我想分享给"
                android:textColor="@color/common_color_242B3D"
                android:textSize="16dp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:gravity="center_horizontal"
                android:layout_margin="10dp"
                android:layout_below="@+id/atv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/aivWenxin"
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/pop_wenxin"
                    tools:srcCompat="@drawable/pop_wenxin" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/aivWeibo"
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/pop_weibo"
                    tools:srcCompat="@drawable/pop_weibo" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/aivQzone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/pop_qzone"
                    tools:srcCompat="@drawable/pop_qzone" />
            </androidx.appcompat.widget.LinearLayoutCompat>


        </com.google.android.material.circularreveal.CircularRevealRelativeLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/pop_share"
            tools:srcCompat="@drawable/pop_share" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aiv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/common_dialog_close"
            tools:srcCompat="@drawable/common_dialog_close" />


    </com.google.android.material.circularreveal.CircularRevealRelativeLayout>
</LinearLayout>