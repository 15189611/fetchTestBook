<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="5dp"
    android:background="@drawable/member_up_item_bk"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/groupBuyImage"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:adjustViewBounds="true"
        android:background="@drawable/member_up_item_img_bk"
        android:scaleType="center"
        app:riv_corner_radius_bottom_left="5dp"
        app:riv_corner_radius_top_left="5dp"
        tools:srcCompat="@drawable/expo_icon" />

    <com.google.android.material.circularreveal.CircularRevealLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:orientation="horizontal"
        android:paddingEnd="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:textSize="@dimen/sp_12"
                tools:text="大夫说的发手术费但是对方但是发多少发放的身份多少的顺丰水电费" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="@color/common_color_FBB403"
                android:textSize="@dimen/sp_12"
                tools:text="Ctrip 掑程" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/memberUpItemMore"
                android:layout_width="120dp"
                android:layout_height="26dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/common_btn_login_gradient"
                android:gravity="center"
                android:text="@string/me_more"
                android:textColor="@color/common_color_282828"
                android:textSize="13sp" />
        </LinearLayout>

    </com.google.android.material.circularreveal.CircularRevealLinearLayout>
</LinearLayout>