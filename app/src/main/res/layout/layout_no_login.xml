<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/crl_no_login"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_color_ffffff"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="ResourceName">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.google.android.material.circularreveal.CircularRevealLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/common_logo" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/me_账户登录"
                android:textColor="@color/common_color_353535"
                android:textSize="41dp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/common_nologin_bg" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginTop="35dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/common_nologin_icon" />
                <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                    android:layout_marginStart="25dp"
                    android:background="@drawable/common_nologin_first_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/me_首次登录"
                        android:textColor="@color/common_color_000000"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                </com.google.android.material.circularreveal.CircularRevealRelativeLayout>
            </FrameLayout>

            <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                android:id="@+id/crrlBtnLogin"
                android:layout_marginTop="20dp"
                android:background="@drawable/common_nologin_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/me_登录"
                    android:textColor="@color/common_color_ffffff"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </com.google.android.material.circularreveal.CircularRevealRelativeLayout>


            <com.google.android.material.circularreveal.CircularRevealRelativeLayout
                android:id="@+id/crrlBtnReg"
                android:layout_marginTop="20dp"
                android:background="@drawable/common_nologin_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/me_注册"
                    android:textColor="@color/common_color_ffffff"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </com.google.android.material.circularreveal.CircularRevealRelativeLayout>



        </com.google.android.material.circularreveal.CircularRevealLinearLayout>


    </androidx.core.widget.NestedScrollView>

</com.google.android.material.circularreveal.CircularRevealLinearLayout>