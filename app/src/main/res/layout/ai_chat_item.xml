<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/iv_other_head"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="#B51D1D"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/iv_mine_head"
        android:layout_toEndOf="@+id/iv_other_head"
        android:background="@drawable/shape_msg_bg"
        android:padding="5dp"
        android:elevation="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:visibility="gone"
            android:layout_marginBottom="5dp"
            android:textColor="#FCC705"/>

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaaa" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_mine_head"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentEnd="true"
        android:background="#B51D1D"
        android:visibility="gone" />
</RelativeLayout>