<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/iv_other_head"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:src="@drawable/me_avata2"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/iv_mine_head"
        android:layout_toEndOf="@+id/iv_other_head"
        android:background="@drawable/shape_msg_bg"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="#FCC705"
            android:textSize="11sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaaa"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/pb_loading"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_mine_head"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/me_avata7"
        android:visibility="gone" />
</RelativeLayout>