<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000">

    <ImageView
        android:id="@+id/drawSuccessDialogBg"
        android:layout_width="match_parent"
        android:layout_height="565dp"
        android:layout_marginHorizontal="50dp"
        android:src="@drawable/success_draw_super_dialog_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/drawSuccessDialogContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="240dp"
        android:gravity="center"
        android:text="恭喜您获得0.9%的福袋奖励，获取211.49旅游宝"
        android:textColor="@color/common_color_FEF3F0"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/drawSuccessDialogBg"
        app:layout_constraintEnd_toEndOf="@+id/drawSuccessDialogBg"
        app:layout_constraintStart_toStartOf="@+id/drawSuccessDialogBg"
        app:layout_constraintTop_toTopOf="@+id/drawSuccessDialogBg" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/drawClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/drawSuccessDialogBg"
        app:layout_constraintStart_toStartOf="@+id/drawSuccessDialogBg"
        app:layout_constraintTop_toBottomOf="@+id/drawSuccessDialogBg"
        app:srcCompat="@drawable/common_dialog_close"
        tools:srcCompat="@drawable/common_dialog_close" />
</androidx.constraintlayout.widget.ConstraintLayout>